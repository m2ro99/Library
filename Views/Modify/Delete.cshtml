@model LibraryWebApp.Models.BooksModel
@{
    ViewData["Title"] = "Delete Book";
}
<h2>Delete Book</h2>
<div>
    <h4>Are you sure you want to delete this book?</h4>
    <dl class="row">
        <dt class="col-sm-2">Book Name</dt>
        <dd class="col-sm-10">@Model.BookName</dd>
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Author</dd>
        <dt class="col-sm-2">Count</dt>
        <dd class="col-sm-10">@Model.Count</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BookId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
