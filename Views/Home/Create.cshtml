@{
    ViewData["Title"] = "Add Book";

}
@model BooksModel

<form method="post" asp-action="Create" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="container mx-auto" style="min-width: 300px; max-width:600px;">
        <h1 class="text-center my-5">Add Book</h1>
        <div class=" mb-3">
            <input type="file" asp-for="ImageFile" class="form-control">
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="text" asp-for="BookName" class="form-control" placeholder="">
            <label asp-for="BookName" class="fw-semibold">Book Name</label>
            <span asp-validation-for="BookName" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="text" asp-for="Author" class="form-control" placeholder="">
            <label asp-for="Author" class="fw-semibold">Author</label>
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="number" asp-for="Count" min="1" max="100" class="form-control" placeholder="">
            <label asp-for="Count" class="fw-semibold">Count</label>
            <span asp-validation-for="Count" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success w-75 mx-auto fw-semibold fs-5">Add</button>
    </div>
</form>


