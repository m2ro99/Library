<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryWebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
        integrity="sha384-tViUnnbYAV00FLIhhi3v/dWt3Jxw4gZQcNoSCxCIFNJVCx7/D55/wXsrNIRANwdD" crossorigin="anonymous">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand btn btn-outline me-3 fs-5 fw-semibold my-sm-0 my-2 px-4 rounded-4 fs-3"
                    asp-area="" asp-controller="Home" asp-action="Index">Library</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class=" btn btn-success fs-5 fw-semibold my-sm-0 my-2" asp-area=""
                                asp-controller="Borrow" asp-action="BorrowedBooks">Borrowed Books</a>
                        </li>
                    </ul>
                    @if (User?.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-outline-primary mx-2 fw-semibold" asp-area="Identity" asp-page="/Account/Manage/Index">
                            @User.Identity.Name?.Split("@")[0] Profile
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="btn btn-outline-warning mx-2 fw-semibold" asp-area="" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                        }
                        <form asp-area="Identity" asp-page="/Account/Logout" method="post"
                            asp-route-returnUrl="@Url.Page("/", new { area = "" })">
                            <button class="btn btn-danger mx-4 fw-bold" type="submit">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-primary fs-5 fw-semibold mx-2" asp-area="Identity"
                            asp-page="/Account/Login">Login</a>
                        <a class="btn btn-warning fs-5 fw-semibold" asp-area="Identity"
                            asp-page="/Account/Register">Register</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
